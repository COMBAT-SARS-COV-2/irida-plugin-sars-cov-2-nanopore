<?xml version="1.0" encoding="UTF-8"?>
<iridaWorkflow>
 <id>ece298c1-cd9d-4aad-a6ce-a366bd5cbb9a</id>
 <name>irida-sars-cov2-nanopore-plugin</name>
  <version>0.1.6</version>
  <analysisType>ARTIC_PIPELINE</analysisType>
  <inputs>
    <sequenceReadsSingle>sequence_reads_list_single</sequenceReadsSingle>
    <reference>reference</reference>
    <requiresSingleSample>true</requiresSingleSample>
  </inputs>
  <parameters>
    <parameter name="artic_minion-3-medaka_model" defaultValue="r941_min_high_g360">
      <toolParameter toolId="3e6ab12e-9646-4b2c-ae19-b8e216c5648f" parameterName="medaka_model" label="Medaka model" type="text"/>
    </parameter>
    <parameter name="artic_minion-3-primer_scheme_source.primer_scheme_source_selector" defaultValue="tool_data_table">
      <toolParameter toolId="3e6ab12e-9646-4b2c-ae19-b8e216c5648f" parameterName="primer_scheme_source.primer_scheme_source_selector" label="Select a primer scheme from your history or use one from a tool data table?" type="select"/>
    </parameter>
    <parameter name="artic_minion-3-primer_scheme_source.primer_scheme_bedfile" defaultValue="SARS-CoV-2-ARTICv1">
      <toolParameter toolId="3e6ab12e-9646-4b2c-ae19-b8e216c5648f" parameterName="primer_scheme_source.primer_scheme_bedfile" label="Primer Scheme" type="data"/>
    </parameter>
    <parameter name="artic_minion-3-reference_source.reference_source_selector" defaultValue="history">
      <toolParameter toolId="3e6ab12e-9646-4b2c-ae19-b8e216c5648f" parameterName="reference_source.reference_source_selector" label="Will you select a reference genome from your history or use a built-in reference?" type="select"/>
    </parameter>
    <parameter name="text_processing-4-adv_opts.adv_opts_selector" defaultValue="basic">
      <toolParameter toolId="626dcfbc-fbd5-47ae-92f0-43005fe645ef" parameterName="adv_opts.adv_opts_selector"/>
    </parameter>
    <parameter name="text_processing-4-code" defaultValue="/^&gt;/s/Consensus_(.*)_threshold_.*/\1/">
      <toolParameter toolId="626dcfbc-fbd5-47ae-92f0-43005fe645ef" parameterName="code" label="AWK Program" type="text"/>
    </parameter>
    <parameter name="qc-5-qc_type_conditional.qc_type" defaultValue="--illumina">
      <toolParameter toolId="347df716-cafe-4341-998e-cebb316abb88" parameterName="qc_type_conditional.qc_type" label="Input Type" type="select"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.min_contig_length" defaultValue="0">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.min_contig_length" label="Skip chromosomes shorter than" type="text"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.include_contig_regex" defaultValue="">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.include_contig_regex" label="Only keep chromosomes matching this regular expression." type="text"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.min_mapq" defaultValue="1">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.min_mapq" label="Minimum mapping quality" type="integer"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.percentile" defaultValue="median">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.percentile" label="How to bin the coverage under one pixel" type="select"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.max_depth" defaultValue="-1">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.max_depth" label="y-axis (depth) limit of the plot" type="integer"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.skip_contig_regex" defaultValue="">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.skip_contig_regex" label="Skip chromosomes matching this regular expression" type="text"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.disable_paired_overlap" defaultValue="false">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.disable_paired_overlap" label="Count overlapping bases with mate for paired-end" type="boolean"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.points" defaultValue="false">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.points" label="Plot coverage using points instead of areas" type="boolean"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-reference.source" defaultValue="history">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="reference.source" label="Will you select a reference genome from your history or use a built-in genome?" type="select"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.sample_filter.filter_by_sample" defaultValue="false">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.sample_filter.filter_by_sample" label="Filter by sample" type="select"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-format" defaultValue="SVG">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="format" label="Output format" type="select"/>
    </parameter>
    <parameter name="jvarkit_wgscoverageplotter-6-adv.clip" defaultValue="false">
      <toolParameter toolId="d20c20de-b5b5-4570-acd6-7469c3980353" parameterName="adv.clip" label="Clip the plot at the y-axis limit" type="boolean"/>
    </parameter>
    <parameter name="pangolin-7-db.source" defaultValue="download">
      <toolParameter toolId="474e8502-8774-4224-8f5f-505bb73378db" parameterName="db.source" label="pangoLEARN source" type="select"/>
    </parameter>
    <parameter name="nextclade-8-adv.advanced_options" defaultValue="no">
      <toolParameter toolId="ac85bba8-2662-4137-8adb-588e5735eaa5" parameterName="adv.advanced_options"/>
    </parameter>
    <parameter name="nextclade-8-organism" defaultValue="sars-cov-2">
      <toolParameter toolId="ac85bba8-2662-4137-8adb-588e5735eaa5" parameterName="organism"/>
    </parameter>
    <parameter name="graphicsmagick_image_convert-9-output_format" defaultValue="pdf">
      <toolParameter toolId="227654ad-ac9c-4f4f-a63f-f8c454223875" parameterName="output_format" label="Output Format" type="select"/>
    </parameter>
  </parameters>
  <outputs>
    <output name="guppyplex_filtered.fastq" fileName="guppyplex_filtered.fastq"/>
    <output name="alignment_report.tsv" fileName="alignment_report.tsv"/>
    <output name="consensus.fasta" fileName="consensus.fasta"/>
    <output name="qc.csv" fileName="qc.csv"/>
    <output name="qc.json" fileName="qc.json"/>
    <output name="qc.png" fileName="qc.png"/>
    <output name="plot_output.svg" fileName="plot_output.svg"/>
    <output name="pangolin.tsv" fileName="pangolin.tsv"/>
    <output name="nextclade.tsv" fileName="nextclade.tsv"/>
    <output name="output_file.pdf" fileName="output_file.pdf"/>
  </outputs>
